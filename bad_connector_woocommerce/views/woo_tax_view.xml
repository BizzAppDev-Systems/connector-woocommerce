<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Woocommerce Tax form view-->
    <record id="view_woo_tax_form" model="ir.ui.view">
        <field name="name">woo.tax.form</field>
        <field name="model">woo.tax</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Taxes">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="amount" />
                            <field name="tax"/>
                        </group>
                    </group>
                    <notebook>
                        <page
                            string="WooCommerce Connector"
                            name="woo_connector"
                            attrs="{'invisible': [('woo_bind_ids', '=', [])]}"
                            groups="connector.group_connector_manager"
                        >
                            <field name="woo_bind_ids" nolabel="1" readonly="1">
                                <tree
                                    string="WooCommerce Taxes"
                                    delete="false"
                                    edit="false"
                                    create="false"
                                >
                                    <field
                                        name="backend_id"
                                        widget="selection"
                                    />
                                    <field name="external_id" />
                                </tree>
                                <form
                                    string="WooCommerce Taxes"
                                    delete="false"
                                    edit="false"
                                    create="false"
                                >
                                    <group>
                                        <group>
                                            <field
                                                name="backend_id"
                                                widget="selection"
                                            />
                                            <field name="external_id" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Define the tree view -->
    <record id="view_woo_tax_tree" model="ir.ui.view">
        <field name="name">woo.tax.tree</field>
        <field name="model">woo.tax</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="amount" />
            </tree>
        </field>
    </record>

    <!-- Define the action for the menu item -->
    <record id="action_woo_tax" model="ir.actions.act_window">
        <field name="name">WooCommerce Tax</field>
        <field name="res_model">woo.tax</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_woo_tax_tree" />
    </record>
</odoo>
