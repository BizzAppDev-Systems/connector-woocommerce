<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form view WooCommerce Backend to add Imports page with button -->
    <record id="view_woo_backend_inherit_woo_sale_order" model="ir.ui.view">
        <field name="name">woo.backend.inherit.woo.sale.order.form</field>
        <field name="model">woo.backend</field>
        <field name="inherit_id" ref="connector_woo_base.view_woo_backend_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_configuration']/group" position="inside">
                <field name="mark_completed" />
                <field name="tracking_info" attrs="{'invisible': [('mark_completed', '=', False)]}"/>
            </xpath>
             <xpath expr="//page[@name='import']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//page[@name='import']" position="inside">
                <group>
                    <group>
                        <label
                            for="import_sale_orders"
                            string="Import Orders"
                            style="font-weight:bold;"
                            class="oe_inline"
                        />
                        <field
                            name="import_orders_from_date"
                            nolabel="1"
                            class="oe_inline"
                        />
                    </group>
                    <group>
                        <div style="min-width: 300px; max-width: 300px;">
                            <button
                                name="import_sale_orders"
                                type="object"
                                class="oe_highlight"
                                string="Import Orders in Background"
                            />
                         </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
