<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="view_woo_backend_oauth_form" model="ir.ui.view">
        <field name="name">woo.backend.oauth.form</field>
        <field name="model">woo.backend</field>
        <field name="inherit_id" ref="connector_woo_base.view_woo_backend_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button
                        name="request_token"
                        type="object"
                        class="oe_highlight"
                        string="Request Token"
                        groups="base.group_system"
                        attrs="{'invisible': [('authentication_type', '=','api_key')]}"
                        />
                </header>
            </xpath>
            <xpath expr="//field[@name='version']" position="before">
                <field name="authentication_type" />
            </xpath>
            <xpath expr="//field[@name='test_client_secret']" position="after">

                    <field
                        name="test_callback_url"
                        attrs="{'invisible': [('authentication_type', '=', 'api_key')], 'required': [('authentication_type', '=', 'auth_1.0')]}"
                        groups="base.group_system"
                        string="Test Callback URL"
                    />
            </xpath>
        </field>
    </record>
</odoo>
