<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit sale order view to add connector page and  Binding -->
    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="name">sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='customer_signature']" position="after">
                <page
                    string="Woo Connector"
                    name="woo_connector"
                    attrs="{'invisible': [('woo_bind_ids', '=', [])]}"
                    groups="connector.group_connector_manager"
                >
                    <field name="woo_bind_ids" nolabel="1" readonly="1">
                        <tree
                            string="Woo Order"
                            delete="false"
                            edit="false"
                            create="false"
                        >
                            <field name="backend_id" widget="selection" />
                            <field name="external_id" />
                        </tree>
                        <form
                            string="Woo Order"
                            delete="false"
                            edit="false"
                            create="false"
                        >
                            <group>
                                <group>
                                    <field name="backend_id" widget="selection" />
                                    <field name="external_id" />
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
