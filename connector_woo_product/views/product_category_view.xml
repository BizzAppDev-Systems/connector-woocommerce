<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Woocommerce product category form view-->
    <record id="view_woo_product_category_form" model="ir.ui.view">
        <field name="name">woo.product.category.form</field>
        <field name="model">woo.product.category</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Product Category">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Category" />
                        <h1>
                            <field name="name" placeholder="e.g. Lamps" />
                        </h1>
                    </div>
                    <group name="first" col="2">
                        <field name="parent_id" class="oe_inline" />
                        <field name="slug" />
                        <field name="display" />
                        <field name="menu_order" />
                        <field name="count" />
                    </group>
                    <notebook>
                        <page string="General Information" name="general_information">
                            <group string="Internal Notes">
                                <field
                                    colspan="2"
                                    name="description"
                                    nolabel="1"
                                    placeholder="This note is only for internal purposes."
                                />
                            </group>
                        </page>
                        <page
                            string="WooCommerce Connector"
                            name="woo_connector"
                            attrs="{'invisible': [('woo_bind_ids', '=', [])]}"
                            groups="connector.group_connector_manager"
                        >
                            <field name="woo_bind_ids" nolabel="1" readonly="1">
                                <tree
                                    string="WooCommerce Product Category"
                                    delete="false"
                                    edit="false"
                                    create="false"
                                >
                                    <field name="backend_id" widget="selection" />
                                    <field name="external_id" />
                                </tree>
                                <form
                                    string="WooCommerce Product Category"
                                    delete="false"
                                    edit="false"
                                    create="false"
                                >
                                    <group>
                                        <group>
                                            <field
                                                name="backend_id"
                                                widget="selection"
                                            />
                                            <field name="external_id" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Define the tree view -->
    <record id="view_woo_product_category_tree" model="ir.ui.view">
        <field name="name">woo.product.category.tree</field>
        <field name="model">woo.product.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="slug" />
            </tree>
        </field>
    </record>
    <record id="view_woo_product_category_view_search" model="ir.ui.view">
        <field name="name">woo.product.category.view.search</field>
        <field name="model">woo.product.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="parent_id" />
            </search>
        </field>
    </record>

    <!-- Define the action for the menu item -->
    <record id="action_woo_product_category" model="ir.actions.act_window">
        <field name="name">Woo Product Categories</field>
        <field name="res_model">woo.product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_woo_product_category_tree" />
    </record>

    <!-- Define the menu item product category at backend level-->
    <menuitem
        id="menu_woo_product_category"
        name="WooCommerce Product Categories"
        sequence="15"
        parent="connector.menu_connector_root"
        groups="connector.group_connector_manager"
    />
    <menuitem
        id="menu_woo_backend"
        name="Product Categories"
        parent="menu_woo_product_category"
        action="action_woo_product_category"
    />
</odoo>
